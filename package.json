{
  "name": "habitica-avatar-manifest",
  "version": "1.0.2-beta",
  "description": "Preprocessed, structured Habitica avatar data including sprites, items, and metadata, ready for use in apps and frontend projects.",
  "main": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "files": [
    "dist/",
    "output/"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "generate:all-images": "tsx ./src/index.ts --all-images",
    "generate": "tsx ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anitawlosek/habitica-avatar-manifest.git"
  },
  "keywords": [
    "habitica",
    "avatar"
  ],
  "author": "Anita WÅ‚osek (anitawlosek@gmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anitawlosek/habitica-avatar-manifest/issues"
  },
  "homepage": "https://github.com/anitawlosek/habitica-avatar-manifest#readme",
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/probe-image-size": "^7.2.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "p-limit": "^7.2.0",
    "probe-image-size": "^7.2.3"
  }
}
